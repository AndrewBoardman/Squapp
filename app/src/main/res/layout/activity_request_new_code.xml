<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestNewCode">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/court">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.1"
            android:background="@color/colorPrimaryDark" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="THE SQUASH APP"
        android:textColor="@color/colorSquapp"
        android:fontFamily="sans-serif-condensed-light"
        android:textStyle="bold"
        android:id="@+id/txt"
        android:textSize="40dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txt"
        android:layout_marginTop="40dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/input_shape"
        android:padding="15dp"
        android:alpha="1"
        android:hint="username"
        android:textColorHint="@color/colorAccent"
        android:textColor="@color/colorAccent"
        android:id="@+id/new_code_username"
        android:singleLine="true"
        />



    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_code_username"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/btn_shape"
        android:text="go back"
        android:textColor="@color/colorAccent"
        android:id="@+id/new_code_go_back_button"

        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_code_username"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="215dp"
        android:background="@drawable/btn_signup"
        android:text="get new code"
        android:textColor="@color/colorAccent"
        android:id="@+id/get_new_code_button"
        android:onClick="getNewCodeBtn"
        />

</RelativeLayout>
